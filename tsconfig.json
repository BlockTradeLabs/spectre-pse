{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",

    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,


    "baseUrl": ".",
    "paths": {
      "@/*": [ "./*", ]
    }
  },
  "include": ["./**/*.ts", "devphase.config.json", "tests/blocktrade/contract.test.ts"],
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules"]
}
